{
  "parserOptions": {
    "ecmaVersion": 2018,
    "impliedStrict": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "prefer-const": "error",
    "no-useless-escape": "off",
    "no-unused-vars": "off",
    "no-console": "error",
    "dot-notation": [
      "error",
      {
        "allowKeywords": false
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ]
  }
}